{% extends 'base.html.twig' %}

{% block title %}Films de {{ director }}{% endblock %}

{% block body %}
    <h1>Films réalisés par {{ director }}</h1>

    <div class="row mt-4">
        {% if films %}
            {% for film in films %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ film.title }}</h5>
                            <p class="card-text">
                                Genre : {{ film.genre }}<br>
                                Durée : {{ film.duration }} minutes
                            </p>
                            <div class="btn-group">
                                <a href="{{ path('films_edit', {id: film.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('films_delete', {id: film.id}) }}" 
                                   class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Êtes-vous sûr ?')">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="alert alert-info">
                Aucun film trouvé pour ce réalisateur.
            </div>
        {% endif %}
    </div>

    <a href="{{ path('films_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}